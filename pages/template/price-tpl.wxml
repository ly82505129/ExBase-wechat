<template name="marketBox">
<image src='/images/icon/collect.png' class='collect'></image>
  <view class="marketBox" bindtap='collect' data-base-market='{{market}}'>
    
    <text class='marketTitle' data-base-market='{{market}}'>{{market}}</text>

    <view class='lastPrice' >
      <text class='marketLastPrice' data-base-market='{{market}}'>{{last_price}}</text>
      <text class='financeLastPrice' data-base-market='{{market}}'>â‰ˆ{{price_cny}}</text>
    </view>
    <view class="percentBox {{change_percent>0 ?'up':'down'}}">
      <text class="percent" data-base-market='{{market}}'>{{change_percent}}%</text>
    </view>
  </view>
</template>